{
    "manifest_version": 2,
    "name": "Code Journal",
    "description": "Document your learning",
    "version": "0.0.0.1",
    "background": {
        "scripts": [
            "event.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Code Journal",
        "default_popup": "popup.html"
    },
    "chrome_url_overrides": {
        "newtab": "tab.html"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "css": [],
        "js": ["content.js"]
    }]
}
